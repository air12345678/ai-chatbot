# =============================================================================
# AI CHATBOT APPLICATION CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values according to your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database Type: mssql, mysql, postgresql, sqlite
DB_TYPE=mssql

# SQL Server / MySQL / PostgreSQL
DB_HOST=localhost
DB_SERVER=localhost
DB_NAME=your_database_name
DB_DATABASE=your_database_name
DB_USER=your_username
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Port Configuration (defaults provided for each DB type)
DB_PORT=1433
# DB_PORT=3306  # MySQL
# DB_PORT=5432  # PostgreSQL

# SSL/Security Settings
DB_ENCRYPT=true
DB_TRUST_CERT=true
DB_ENABLE_ARITH_ABORT=true

# Connection Pool Settings
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_IDLE_TIMEOUT=30000
DB_REQUEST_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=30000

# SQLite (if using SQLite)
DB_PATH=./database.db

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# SQL EXECUTION & ERROR HANDLING
# =============================================================================
# Dynamic SQL Executor Settings
SQL_MAX_RETRIES=3
SQL_THROW_ON_FAILURE=true
SQL_AUTO_FIX_GROUP_BY=true
SQL_USE_CTE_RESTRUCTURING=true
SQL_VERBOSE_LOGGING=true

# Query Handler Settings
QUERY_VERBOSE=true
QUERY_MAX_RETRIES=3
QUERY_THROW_ON_FAILURE=true

# =============================================================================
# FILE & EXPORT CONFIGURATION
# =============================================================================
EXPORT_DIR=./exports
EXPORT_BASE_URL=http://localhost:3000/exports

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
LOG_LEVEL=info
VERBOSE_LOGGING=true
DEBUG_SQL_QUERIES=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
CORS_ORIGIN=http://localhost:4200
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable development features
DEV_MODE=true
HOT_RELOAD=true

# =============================================================================
# PRODUCTION OPTIMIZATIONS
# =============================================================================
# Uncomment for production
# NODE_ENV=production
# SQL_VERBOSE_LOGGING=false
# DEBUG_SQL_QUERIES=false
# LOG_LEVEL=error
